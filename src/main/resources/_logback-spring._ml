<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="hibernate.show_sql" value="false" />

    <springProfile name="home,local">
        <include resource="org/springframework/boot/logging/logback/base.xml" />

        <root level="INFO" />
        <logger name="org.springframework.web.servlet" level="DEBUG" /> <!-- for HTTP stack traces -->
    </springProfile>

    <springProfile name="dev">
        <include resource="org/springframework/boot/logging/logback/defaults.xml" />
        <springProperty scope="context" name="websock.port" source="websock.port" />

        <appender name="dailyRolling" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>./logs/appinall_server.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>./logs/appinall_server-%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>61</maxHistory>
            </rollingPolicy>
            <encoder>
                <!-- Reuse Spring Boot default pattern (https://github.com/spring-projects/spring-boot/blob/master/spring-boot/src/main/resources/org/springframework/boot/logging/logback/defaults.xml) -->
                <pattern>${FILE_LOG_PATTERN}</pattern>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="dailyRolling" />
        </root>
    </springProfile>

    <springProfile name="qa,real">
        <include resource="org/springframework/boot/logging/logback/defaults.xml" />
        <springProperty scope="context" name="websock.port" source="websock.port" />

        <appender name="dailyRolling" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>./logs/appinall_server.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>./logs/appinall_server-%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>61</maxHistory>
            </rollingPolicy>
            <encoder>
                <!-- Reuse Spring Boot default pattern (https://github.com/spring-projects/spring-boot/blob/master/spring-boot/src/main/resources/org/springframework/boot/logging/logback/defaults.xml) -->
                <pattern>${FILE_LOG_PATTERN}</pattern>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="dailyRolling" />
        </root>
    </springProfile>

</configuration>
